<animated-vector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:aapt="http://schemas.android.com/aapt"
  android:drawable="@drawable/vector_trimclip_heart_break">

  <!-- Rotate and fade out the two broken-halves. -->
  <target android:name="broken_heart_left_group"
      android:animation="@animator/animation_heart_broken_heart_left_group">
  </target>

  <target
    android:name="broken_heart_left"
    android:animation="@animator/animation_heart_fade_out"/>

  <target android:name="broken_heart_right_group"
      android:animation="@animator/animation_heart_broken_heart_right_group">
  </target>

  <target
    android:name="broken_heart_right"
    android:animation="@animator/animation_heart_fade_out"/>

  <!-- Re-draw the stroke. -->
  <target
    android:name="heart_stroke_left_atrium"
    android:animation="@animator/animation_heart_heart_draw_stroke"/>

  <target
    android:name="heart_stroke_right_atrium"
    android:animation="@animator/animation_heart_heart_draw_stroke"/>

</animated-vector>